@page "{id:int?}"
@model TecNM.Ecommerce.WebSite.Pages.Brand.Delete

<div class="container-fluid">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <h2>Delete Brand</h2>
                
            <form method="post">
                <input type="hidden" asp-for="Brand.Id"/>
                <div class="form-group">
                    <label asp-for="Brand.Name"></label>
                    <input asp-for="Brand.Name" class="form-control" maxlength="45"/>
                    <span class="text-danger" asp-validation-for="Brand.Name"></span>
                </div>
                    
                <div class="form-group">
                    <label asp-for="Brand.Description"></label>
                    <input asp-for="Brand.Description" class="form-control" maxlength="100"/>
                    <span class="text-danger" asp-validation-for="Brand.Description"></span>
                </div>
                    
                <div class="alert alert-danger" role="alert">
                    <ul>
                        <li>An error</li>
                    </ul>
                </div>    
                    
                <div class="row">
                    <div class="col-md-12 text-right">
                        <button type="submit" class="btn btn-primary mr-3">Save</button>
                        <a class="btn btn-secondary" asp-page="/Brand/List">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-1"></div>
        </div>
    </div>